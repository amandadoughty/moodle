{{!
    @template format_culcourse/activity

    Individual activity link.

    Classes required for JS:
    * activitylink, activitylinkdraggable

    Data attributes required for JS:
    * data-setting, data-position

    Context variables required for this template:
    * see format/course/culcourse/classes/output/dashboard.php

}}

{{#ismovingactivitylink}}
    {{> format_culcourse/position}}
{{/ismovingactivitylink}}

<li 
    class="dash activitylink activitylinkdraggable"
    data-setting="activitylinksequence"
    data-position="{{name}}"
>
    {{> format_culcourse/movelink}}
    <span class="dash-link {{class}}">
        <a title="{{attrs.title}}" class="dash-icon {{attrs.class}}" href="{{{url}}}" target="{{attrs.target}}">
            {{{icon}}}
            <span class="sr-only">{{attrs.title}}</span>
        </a>
        <a title="{{attrs.title}}" class="dash-text {{attrs.class}}" href="{{{url}}}" target="{{attrs.target}}">
            {{text}}
        </a>
        {{> format_culcourse/editlink}}        
    </span>
</li>