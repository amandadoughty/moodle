{{!
    @template format_pgrid/dashboard

    Links panel containing quick links and activity links.

    Classes required for JS:
    * quicklinks, activitylinks

    Data attributes required for JS:
    
    Context variables required for this template:
    * see format/course/pgrid/classes/output/dashboard.php

}}
{{# cancelquicklink}}
    {{> format_pgrid/cancelquicklink}}
{{/ cancelquicklink}}

{{# cancelactivitylink}}
    {{> format_pgrid/cancelactivitylink}}
{{/ cancelactivitylink}}

{{#userisediting}}
<p>
  <button id="format_pgrid_toggledashboard" class="btn btn-primary" type="button" data-toggle="collapse" data-target="#format_pgrid_dashboard" aria-expanded="false" aria-controls="format_pgrid_dashboard">
    {{# str}} toggledashboard, format_pgrid {{/ str}}
  </button>
</p>
<div class="collapse show" id="format_pgrid_dashboard">
{{/userisediting}}
<div class="courseheader position-relative pt-5 mb-4">
<div class="course-image bg-dark" style="background-image: url('{{ courseimgurl }}')">
</div>
    <div class="container-fluid d-flex flex-wrap align-items-stretch position-relative">

        {{# quicklinksexist}}
        <div class="dash-panel quicklinks-wrap col-12 col-md-6 p-4">
            <h2 class="mb-3">Quick Links</h2>
            <nav class="linkscontainer">
                <ul class="quicklinks links d-flex flex-wrap">
                    {{# quicklinks}}
                    {{> format_pgrid/quicklink}}
                    {{/ quicklinks}}
                    {{#ismovingquicklink}}
                        {{> format_pgrid/lastquicklinkposition}}
                    {{/ismovingquicklink}}
                    <div class="viewmorelink flex-wrap align-items-stretch col-xs-6 col-sm-4 col-xl-3 p-1">
                        <a href="javascript:void(0);" class="viewmore-inner d-flex flex-wrap flex-column align-items-center justify-content-center w-100 text-white">
                            <div class="viewmore-text text-center">
                                <div class="h2 text-white mb-0">
                                    <i class="fa fa-plus"></i>
                                </div>
                                {{#str}}viewmore, theme_cul_boost{{/str}}
                            </div>
                            <div class="viewless-text">
                                <div class="h2 text-white mb-0">
                                    <i class="fa fa-minus"></i>
                                </div>
                                {{#str}}viewless, theme_cul_boost{{/str}}
                            </div>
                        </a>
                    </div>
                </ul>
            </nav>
        </div>
        {{/ quicklinksexist}}

        {{# activitiesexist}}
        <div class="dash-panel activities-wrap col-12 col-md-6 p-4">
            <h2 class="mb-3">Activities</h2>
            <nav class="linkscontainer">
                <ul class="activitylinks links d-flex flex-wrap">
                    {{# activities}}
                    {{> format_pgrid/activity}}
                    {{/ activities}}
                    {{#ismovingactivitylink}}
                        {{> format_pgrid/lastactivityposition}}
                    {{/ismovingactivitylink}}
                    <div class="viewmorelink flex-wrap align-items-stretch col-xs-6 col-sm-4 col-xl-3 p-1">
                        <a href="javascript:void(0);" class="viewmore-inner d-flex flex-wrap flex-column align-items-center justify-content-center w-100 text-white">
                            <div class="viewmore-text text-center">
                                <div class="h2 text-white mb-0">
                                    <i class="fa fa-plus"></i>
                                </div>
                                {{#str}}viewmore, theme_cul_boost{{/str}}
                            </div>
                            <div class="viewless-text text-center">
                                <div class="h2 text-white mb-0">
                                    <i class="fa fa-minus"></i>
                                </div>
                                {{#str}}viewless, theme_cul_boost{{/str}}
                            </div>
                        </a>
                    </div>
                </ul>
            </nav>
        </div>
        {{/ activitiesexist}}
    </div>
</div>
{{#userisediting}}
</div>
{{/userisediting}}

{{#userisediting}}
{{#js}}
    require(['format_pgrid/quicklinks'], function(quicklinkmanager) {
        quicklinkmanager.init('{{adminurl}}');
    });
    require(['format_pgrid/dashtoggle'], function(dashtoggle) {
        dashtoggle.init('{{courseid}}');
    });
{{/js}}
{{/userisediting}}