{{!
    @template local_culcourse_dashboard/quicklink

    Individual quick link.

    Classes required for JS:
    * quicklink, quicklinkdraggable

    Data attributes required for JS:
    * data-setting, data-position

    Context variables required for this template:
    * see local/culcourse_dashboard/classes/output/dashboard.php

}}

{{#ismovingquicklink}}
    {{> local_culcourse_dashboard/position}}
{{/ismovingquicklink}}

<li 
    class="dash quicklink quicklinkdraggable flex-wrap align-items-stretch col-xs-6 col-sm-4 col-xl-3"
    data-setting="quicklinksequence"
    data-position="{{name}}"
    aria-labelledby="{{attrs.id}}"
>
    <div class="dash-link {{class}} {{#attrs.class}}bg-white{{/attrs.class}} w-100 h-100 d-flex flex-wrap align-items-center justify-content-center text-center">
        {{> local_culcourse_dashboard/movelink}}
        <a id="{{attrs.id}}" class="w-100 h-100 d-flex flex-wrap align-items-center justify-content-center {{#attrs.class}}disabled{{/attrs.class}} p-2" href="{{{url}}}" target="{{attrs.target}}" title="{{attrs.title}}">
            <div class="dash-link-inner w-100 d-flex flex-wrap flex-column">
                {{^attrs.class}}
                <div class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center mb-2">
                    <i class="fa {{icon}}"></i>
                </div>
                {{/attrs.class}}
                {{#attrs.class}}
                <div class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center mb-2">           
                    <i class="fa {{icon}} text-muted"></i>
                </div>
                {{/attrs.class}}
                <div class="dash-text {{attrs.class}} {{#attrs.class}}text-muted{{/attrs.class}}">
                    {{text}}
                </div>      
            </div>
        </a>
        {{> local_culcourse_dashboard/editlink}}  
    </div>
</li>