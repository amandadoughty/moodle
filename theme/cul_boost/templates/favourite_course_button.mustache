{{!
    Favourite course button (star).
}}

<div id="{{ id }}" class="favourite-btn fixed-btn d-flex flex-wrap align-items-center justify-content-center bg-dark h4 m-0 text-white">
    <a 
        href="{{{ favouriteurl }}}"
        class="text-white {{ class }}"
        data-toggle="popover"
        data-content="{{{ favouritetxt }}}"
        data-placement="left"
        data-trigger="hover"
    >
        <span class="accesshide">
            {{ favouritetxt }}
        </span>
    </a>
</div>

