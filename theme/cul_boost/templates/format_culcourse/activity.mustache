{{!
    @template format_culcourse/activity

    Individual activity link.

    Classes required for JS:
    * activitylink, activitylinkdraggable

    Data attributes required for JS:
    * data-setting, data-position

    Context variables required for this template:
    * see format/course/culcourse/classes/output/dashboard.php

}}

{{#ismovingactivitylink}}
    {{> format_culcourse/position}}
{{/ismovingactivitylink}}

<li 
    class="dash activitylink activitylinkdraggable flex-wrap align-items-stretch col-12 col-sm-6 col-md-4 col-lg-3"
    data-setting="activitylinksequence"
    data-position="{{name}}"
>
    <span class="dash-link {{class}} w-100 d-flex flex-wrap align-items-center justify-content-center text-center">
        {{> format_culcourse/movelink}}
        <div class="dash-link-inner p-2 d-flex flex-wrap flex-column">
            <a title="{{attrs.title}}" class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center mb-1" href="{{url}}" target="{{attrs.target}}">
                {{{icon}}}
            </a>
            <a title="{{attrs.title}}" class="dash-text {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center" href="{{url}}" target="{{attrs.target}}">
                {{text}}
            </a>
        </div>
        {{> format_culcourse/editlink}}
    </span>
</li>