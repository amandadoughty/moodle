{{!
    @template format_culcourse/activity

    Individual activity link.

    Classes required for JS:
    * activitylink, activitylinkdraggable

    Data attributes required for JS:
    * data-setting, data-position

    Context variables required for this template:
    * see format/course/culcourse/classes/output/dashboard.php

}}

{{#ismovingactivitylink}}
    {{> format_culcourse/position}}
{{/ismovingactivitylink}}

<li 
    class="dash activitylink activitylinkdraggable flex-wrap align-items-stretch col-xs-6 col-sm-4 col-xl-3"
    data-setting="activitylinksequence"
    data-position="{{name}}"
>
    <span class="dash-link {{class}} w-100 h-100 d-flex flex-wrap align-items-stretch justify-content-stretch text-center">
        {{> format_culcourse/movelink}}
        <a class="w-100 h-100 d-flex flex-wrap align-items-center justify-content-center p-2" href="{{{url}}}" target="{{attrs.target}}" title="{{attrs.title}}">
            <div class="dash-link-inner w-100 d-flex flex-wrap flex-column">
                <div class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center mb-2">
                    {{{icon}}}
                </div>
                <span class="dash-text {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center">
                    {{text}}
                </span>
            </div>
        </a>
        {{> format_culcourse/editlink}}
    </span>
</li>