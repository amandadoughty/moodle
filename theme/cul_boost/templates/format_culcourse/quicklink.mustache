{{!
    @template format_culcourse/quicklink

    Individual quick link.

    Classes required for JS:
    * quicklink, quicklinkdraggable

    Data attributes required for JS:
    * data-setting, data-position

    Context variables required for this template:
    * see format/course/culcourse/classes/output/dashboard.php

}}

{{#ismovingquicklink}}
    {{> format_culcourse/position}}
{{/ismovingquicklink}}

<li 
    class="dash quicklink quicklinkdraggable d-flex flex-wrap align-items-stretch col-12 col-sm-6 col-md-4 col-lg-3"
    data-setting="quicklinksequence"
    data-position="{{name}}"
>
    <div class="dash-link {{class}} w-100 d-flex flex-wrap align-items-center justify-content-center text-center">
        {{> format_culcourse/movelink}}
        <div class="dash-link-inner p-2 d-flex flex-wrap flex-column">
            {{^attrs.class}}
            <a title="{{attrs.title}}" class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center mb-1" href="{{{url}}}" target="{{attrs.target}}">
                <i class="fa {{icon}} fa-stack-2x"></i>
            </a>
            {{/attrs.class}}
            {{#attrs.class}}
            <a title="{{attrs.title}}" class="dash-icon {{attrs.class}} d-flex flex-wrap align-items-center justify-content-center" href="{{{url}}}" target="{{attrs.target}}">
                <span class="fa-stack">                
                    <i class="fa {{icon}} fa-stack-1x"></i>
                    <i class="fa fa-ban fa-stack-2x"></i>
                </span>
            </a>
            {{/attrs.class}}
            <a title="{{attrs.title}}" class="dash-text small {{attrs.class}}" href="{{{url}}}" target="{{attrs.target}}">
                {{text}}
            </a>      
        </div>
        {{> format_culcourse/editlink}}  
    </div>
</li>