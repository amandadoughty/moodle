<div class="global_search d-none d-sm-flex flex-wrap justify-content-end p-0 ml-4">
    <div class="slidersearchform d-flex flex-wrap align-items-center">
        <form action="/search/index.php">
            <label for="theme_cul_boost_id_q" class="accesshide">
                {{#str}}enteryoursearchquery, search{{/str}}
            </label>
            <input
                id="theme_cul_boost_id_q"
                type="text" 
                name="q"
                alt="{{#str}}searchfor, theme_cul_boost{{/str}}"
                placeholder="{{#str}}searchfor, theme_cul_boost{{/str}}"
            />
            <button type="submit" class="btn btn-primary p-0">
                <i class="fa fa-search"></i>
                <span class="accesshide">{{#str}}search, search{{/str}}</span>
            </button>
        </form>
    </div>
</div>
